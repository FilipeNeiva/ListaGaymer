<resources>
    <!-- Base application theme. -->
    <style name="Theme.ListaGaymer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button Style -->
    <style name="Button.Primary" parent="android:Widget">
        <item name="android:background">@drawable/drawable_button_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
    </style>

    <!--Input Style-->
    <style name="Input.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/drawable_input</item>
        <item name="android:padding">10dp</item>
        <item name="android:height">50dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Toolbar.Overlay" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
    </style>
</resources>
